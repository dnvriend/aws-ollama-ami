.PHONY: help
.DEFAULT_GOAL := help

help:
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

init: ## init terraform
	terraform init

plan: init ## plan terraform
	terraform plan

apply: ## apply terraform
	terraform apply -auto-approve

auth: ## authenticate to AWS
	start-session -s aws
